{
	"name": "lcov-reporter-action",
	"version": "0.3.0",
	"description": "Comments on a pull request with a lcov code coverage report",
	"license": "MIT",
	"author": "Steffen Koette",
	"repository": "https://github.com/Nef10/lcov-reporter-action",
	"keywords": [
		"actions",
		"pull-request",
		"comment",
		"message"
	],
	"main": "index.js",
	"scripts": {
		"build": "rollup -c",
		"test": "jest --passWithNoTests --coverage",
		"local": "babel-node src/cli",
		"format": "prettier --write src/*.js src/**/*.js"
	},
	"dependencies": {
		"@actions/core": "^1.10.0",
		"@actions/github": "^5.1.1",
		"lcov-parse": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.12",
		"@babel/node": "^7.20.7",
		"@babel/preset-env": "^7.20.2",
		"@rollup/plugin-commonjs": "^24.0.1",
		"@rollup/plugin-json": "^6.0.0",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"babel-jest": "^29.4.2",
		"core-js": "3",
		"jest": "^29.4.2",
		"prettier": "^2.8.4",
		"regenerator-runtime": "^0.13.10",
		"rollup": "^3.17.1",
		"rollup-plugin-node-externals": "^5.1.2"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"useBuiltIns": "usage",
					"corejs": 3
				}
			]
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/*_test.js",
			"<rootDir>/src/**/*_test.js"
		]
	},
	"prettier": {
		"useTabs": true
	}
}
